{
  "settings": {
    "number_of_shards": %%CONF_SHARDS%%,
    "number_of_replicas": %%REPLICAS%%
  },
  "mappings": {
    "_meta": {
      "version": "%%VERSION%%",
      "name": "%%PREFIX%%"
    },
    "dynamic": "strict",
    "properties": {
      "id": {
        "type": "keyword"
      },
      "timestamp": {
        "type":   "date"
      },
      "name": {
        "type":   "text"
      },
      "description": {
        "type":   "text"
      },
      "event": {
        "properties": {
          "type": {
            "type": "keyword"
          },
          "properties": {
            "type": "flatten"
          },
          "context": {
             "type": "flatten"
          },
          "session": {
            "properties": {
              "id": {
                "type": "keyword"
              }
            }
          },
          "source": {
            "properties": {
              "id": {
                "type": "keyword"
              }
            }
          },
          "profile": {
            "properties": {
              "id": {
                "type": "keyword"
              }
            }
          }
        }
      },
      "status": {
        "type": "keyword"
      }
    }
  },
  "aliases": {
    "%%ALIAS%%": {}
  }
}
